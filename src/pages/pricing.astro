---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Pricing" activeSection="pricing">
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="mt-4">
        <h1 class="text-3xl font-bold">Planes y Precios</h1>
        <p class="mt-2 text-slate-600">Elige el plan que mejor se adapte a tu negocio.</p>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <!-- Pricing cards will be rendered by JS -->
    </div>

    <div id="noProductsMessage" class="hidden text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
      </svg>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No hay planes disponibles</h3>
      <p class="mt-1 text-sm text-gray-500">Agrega productos en la sección de productos para que aparezcan aquí.</p>
    </div>
  </div>

  <script>
    import { getProducts } from '../lib/supabase';

    async function loadPricing() {
      const products = await getProducts();
      const grid = document.querySelector('.grid');
      const noProductsMsg = document.getElementById('noProductsMessage');

      if (!grid) return;

      if (!products || products.length === 0) {
        grid.innerHTML = '';
        if (noProductsMsg) noProductsMsg.classList.remove('hidden');
        return;
      }

      if (noProductsMsg) noProductsMsg.classList.add('hidden');

      grid.innerHTML = products.map(p => `
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="px-6 py-8">
            <h3 class="text-lg font-semibold text-gray-900">${p.name}</h3>
            <p class="text-sm text-gray-500 mt-2">${p.description || ''}</p>
            <div class="mt-6 space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Licencia Única</span>
                <span class="text-xl font-bold text-gray-900">${p.price_one_payment ? `$${p.price_one_payment.toFixed(2)}` : 'N/D'}</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Suscripción / mes</span>
                <span class="text-xl font-bold text-gray-900">${p.price_subscription ? `$${p.price_subscription.toFixed(2)}/mes` : 'N/D'}</span>
              </div>
            </div>

            <div class="mt-6 flex gap-2">
              <a href="/licenses?product_id=${p.id}&type=licencia_unica" class="inline-flex items-center justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">Comprar</a>
              <a href="/licenses?product_id=${p.id}&type=suscripcion" class="inline-flex items-center justify-center rounded-md bg-white border border-gray-300 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-50">Suscribirse</a>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Load on mount
    loadPricing();
  </script>
</DashboardLayout>

