      sales_count: 'from-green-400 to-teal-600',
      new_clients: 'from-blue-400 to-indigo-600',
      active_subscriptions: 'from-violet-400 to-purple-600',
      active_licenses: 'from-cyan-400 to-blue-600',
      pending_payments: 'from-rose-400 to-red-600',
      pending_count: 'from-orange-400 to-red-500',
      products_sold: 'from-amber-400 to-orange-600',
      mrr: 'from-pink-400 to-rose-600',
      custom: 'from-slate-400 to-slate-600'
    };

    const typeIcons: Record<string, string> = {
      sales_revenue: 'üí∞',
      sales_count: 'üõí',
      new_clients: 'üë•',
      active_subscriptions: 'üîÑ',
      active_licenses: 'üîë',
      pending_payments: '‚ö†Ô∏è',
      pending_count: 'üìã',
      products_sold: 'üì¶',
      mrr: 'üìà',
      custom: '‚≠ê'
    };

    const priorityLabels: Record<string, { label: string; class: string }> = {
      low: { label: 'Baja', class: 'bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-300' },
      medium: { label: 'Media', class: 'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400' },
      high: { label: 'Alta', class: 'bg-orange-100 text-orange-700 dark:bg-orange-900/30 dark:text-orange-400' },
      critical: { label: 'Cr√≠tica', class: 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400' }
    };

    async function init() {
      currentUser = await checkAuth();
      if (!currentUser) return;

      canManage = canManageGoals(currentUser.profile?.role);
      
      if (!canManage) {
        document.getElementById('addGoalBtn')?.remove();
      }

      // Setup dates
      const today = new Date();
      (document.getElementById('startDate') as HTMLInputElement).value = today.toISOString().split('T')[0];
      const endOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0);
      (document.getElementById('endDate') as HTMLInputElement).value = endOfMonth.toISOString().split('T')[0];

      // Setup color picker sync
      const colorInput = document.getElementById('goalColor') as HTMLInputElement;
      const colorText = document.getElementById('goalColorText') as HTMLInputElement;
      colorInput?.addEventListener('input', () => { colorText.value = colorInput.value; });
      colorText?.addEventListener('input', () => { colorInput.value = colorText.value; });

      // Setup notify percentage slider
      const notifySlider = document.getElementById('notifyPercentage') as HTMLInputElement;
      const notifyValue = document.getElementById('notifyValue') as HTMLElement;
      notifySlider?.addEventListener('input', () => { notifyValue.textContent = `${notifySlider.value}%`; });

      // Setup auto-calculate toggle
      const autoCalc = document.getElementById('autoCalculate') as HTMLInputElement;
      const currentValueInput = document.getElementById('currentValue') as HTMLInputElement;
      autoCalc?.addEventListener('change', () => {
        currentValueInput.disabled = autoCalc.checked;
        currentValueInput.classList.toggle('opacity-50', autoCalc.checked);
      });

      await loadGoals();
      setupTabs();
    }

    async function loadGoals() {
      allGoals = await getGoals();
      renderGoals(allGoals);
      updateStats(allGoals);
    }

    let currentStatusFilter = 'all';
    let currentTypeFilter = '';
    let currentPriorityFilter = '';
    let currentSearchTerm = '';

    function applyAllFilters() {
      let filtered = allGoals;
      
      // Status filter
      if (currentStatusFilter === 'active') {
        filtered = filtered.filter(g => g.progress_status === 'in_progress');
      } else if (currentStatusFilter === 'completed') {
        filtered = filtered.filter(g => g.progress_status === 'completed');
      } else if (currentStatusFilter === 'failed') {
        filtered = filtered.filter(g => g.progress_status === 'failed');
      }
      
      // Type filter
      if (currentTypeFilter) {
        filtered = filtered.filter(g => g.type === currentTypeFilter);
      }
      
      // Priority filter
      if (currentPriorityFilter) {
        filtered = filtered.filter(g => g.priority === currentPriorityFilter);
      }
      
      // Search filter
      if (currentSearchTerm) {
        const term = currentSearchTerm.toLowerCase();
        filtered = filtered.filter(g => 
          g.title.toLowerCase().includes(term) ||
          (g.description && g.description.toLowerCase().includes(term))
        );
      }
      
      renderGoals(filtered);
    }

    function setupTabs() {
      // Status tabs
      document.querySelectorAll('.goal-tab').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.goal-tab').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentStatusFilter = (btn as HTMLElement).dataset.filter || 'all';
          applyAllFilters();
        });
      });
      
      // Type filter
      document.getElementById('typeFilter')?.addEventListener('change', (e) => {
        currentTypeFilter = (e.target as HTMLSelectElement).value;
        applyAllFilters();
      });
      
      // Priority filter
      document.getElementById('priorityFilter')?.addEventListener('change', (e) => {
        currentPriorityFilter = (e.target as HTMLSelectElement).value;
        applyAllFilters();
      });
      
      // Search
      document.getElementById('searchGoals')?.addEventListener('input', (e) => {
        currentSearchTerm = (e.target as HTMLInputElement).value;
        applyAllFilters();
      });
    }

    function renderGoals(goals: any[]) {
      const container = document.getElementById('goalsGrid')!;
      
      if (goals.length === 0) {
        container.innerHTML = `
          <div class="col-span-full text-center py-16">
            <div class="w-20 h-20 rounded-full bg-slate-100 dark:bg-slate-800 flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">No hay metas</h3>
            <p class="text-slate-500 dark:text-slate-400 mb-4">Crea tu primera meta para empezar a hacer seguimiento</p>
            ${canManage ? '<button onclick="document.getElementById(\'addGoalBtn\').click()" class="btn-primary">Crear Meta</button>' : ''}
          </div>`;
        return;
      }

      container.innerHTML = goals.map(goal => {
        const progress = goal.progress_percentage || 0;
        const daysLeft = differenceInDays(new Date(goal.end_date), new Date());
        const isOverdue = daysLeft < 0 && progress < 100;
        const isCompleted = progress >= 100;
        const priority = priorityLabels[goal.priority] || priorityLabels.medium;
        const goalColor = goal.color || '#6366f1';

        return `
          <div class="goal-card group" style="--goal-color: ${goalColor}">
            <div class="h-1.5" style="background: linear-gradient(to right, ${goalColor}, ${goalColor}dd)"></div>
            <div class="p-5">
              <div class="flex justify-between items-start mb-3">
                <div class="flex items-start gap-3">
                  <span class="text-2xl">${typeIcons[goal.type] || '‚≠ê'}</span>
                  <div>
                    <div class="flex items-center gap-2 mb-1">
                      <span class="text-xs font-medium text-slate-400 dark:text-slate-500 uppercase tracking-wide">${typeLabels[goal.type] || goal.type}</span>
                      ${goal.auto_calculate ? '<span class="text-xs px-1.5 py-0.5 rounded bg-indigo-100 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400">Auto</span>' : ''}
                    </div>
                    <h3 class="font-semibold text-slate-900 dark:text-white line-clamp-2">${goal.title}</h3>
                  </div>
                </div>
                <div class="flex flex-col items-end gap-1">
                  ${isCompleted ? '<span class="badge-success text-xs">‚úì Completada</span>' : 
                    isOverdue ? '<span class="badge-danger text-xs">‚ö† Vencida</span>' : 
                    `<span class="badge-info text-xs">${daysLeft}d restantes</span>`}
                  <span class="text-xs px-2 py-0.5 rounded-full ${priority.class}">${priority.label}</span>
                </div>
              </div>
              
              ${goal.description ? `<p class="text-sm text-slate-600 dark:text-slate-400 mb-4 line-clamp-2">${goal.description}</p>` : ''}
              
              <!-- Circular Progress -->
              <div class="flex items-center gap-4 mb-4">
                <div class="relative w-16 h-16 flex-shrink-0">
                  <svg class="w-16 h-16 progress-ring" viewBox="0 0 36 36">
                    <path class="stroke-slate-200 dark:stroke-slate-700" stroke-width="3" fill="none" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"/>
                    <path class="stroke-current ${isCompleted ? 'text-emerald-500' : isOverdue ? 'text-rose-500' : 'text-indigo-500'}" stroke-width="3" stroke-linecap="round" fill="none" stroke-dasharray="${Math.min(progress, 100)}, 100" d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"/>
                  </svg>
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-sm font-bold text-slate-900 dark:text-white">${progress.toFixed(0)}%</span>
                  </div>
                </div>
                <div class="flex-1 space-y-2">
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-500 dark:text-slate-400">Actual</span>
                    <span class="font-semibold text-slate-900 dark:text-white">${formatValue(goal.current_value, goal.unit)}</span>
                  </div>
                  <div class="flex justify-between text-sm">
                    <span class="text-slate-500 dark:text-slate-400">Objetivo</span>
                    <span class="font-semibold text-slate-900 dark:text-white">${formatValue(goal.target_value, goal.unit)}</span>
                  </div>
                </div>
              </div>
              
              <div class="flex justify-between items-center pt-3 border-t border-slate-100 dark:border-slate-700">
                <span class="text-xs text-slate-500 dark:text-slate-400">
                  ${format(new Date(goal.start_date), 'dd MMM', { locale: es })} - ${format(new Date(goal.end_date), 'dd MMM', { locale: es })}
                </span>
                ${canManage ? `
                  <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                    <button onclick="editGoal('${goal.id}')" class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300 text-sm font-medium">Editar</button>
                    <button onclick="confirmDelete('${goal.id}')" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 text-sm font-medium">Eliminar</button>
                  </div>
                ` : ''}
              </div>
            </div>
          </div>
        `;
      }).join('');
    }

    function updateStats(goals: any[]) {
      const active = goals.filter(g => g.status === 'active').length;
      const completed = goals.filter(g => g.status === 'completed' || g.progress_status === 'completed').length;
      const failed = goals.filter(g => g.status === 'failed' || g.progress_status === 'failed').length;
      const avgProgress = goals.length > 0 
        ? goals.reduce((sum, g) => sum + (g.progress_percentage || 0), 0) / goals.length 
        : 0;

      document.getElementById('activeCount')!.textContent = active.toString();
      document.getElementById('completedCount')!.textContent = completed.toString();
      document.getElementById('failedCount')!.textContent = failed.toString();
      document.getElementById('avgProgress')!.textContent = `${avgProgress.toFixed(0)}%`;
    }

    // Modal handlers
    const modal = document.getElementById('goalModal')!;
    const deleteModal = document.getElementById('deleteModal')!;
    const form = document.getElementById('goalForm') as HTMLFormElement;

    document.getElementById('addGoalBtn')?.addEventListener('click', () => {
      if (!canManage) return;
      document.getElementById('modalTitle')!.textContent = 'Nueva Meta';
      form.reset();
      (document.getElementById('goalId') as HTMLInputElement).value = '';
      const today = new Date();
      (document.getElementById('startDate') as HTMLInputElement).value = today.toISOString().split('T')[0];
      const endOfMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0);
      (document.getElementById('endDate') as HTMLInputElement).value = endOfMonth.toISOString().split('T')[0];
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    });

    document.getElementById('cancelBtn')?.addEventListener('click', closeModal);
    document.getElementById('closeModalBtn')?.addEventListener('click', closeModal);

    function closeModal() {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (!canManage) return;
      
      const goalId = (document.getElementById('goalId') as HTMLInputElement).value;
      const goalData = {
        title: (document.getElementById('title') as HTMLInputElement).value,
        description: (document.getElementById('description') as HTMLTextAreaElement).value || undefined,
        type: (document.getElementById('goalType') as HTMLSelectElement).value,
        unit: (document.getElementById('unit') as HTMLSelectElement).value,
        target_value: parseFloat((document.getElementById('targetValue') as HTMLInputElement).value),
        current_value: parseFloat((document.getElementById('currentValue') as HTMLInputElement).value) || 0,
        start_date: (document.getElementById('startDate') as HTMLInputElement).value,
        end_date: (document.getElementById('endDate') as HTMLInputElement).value,
        status: 'active',
        auto_calculate: (document.getElementById('autoCalculate') as HTMLInputElement).checked,
        priority: (document.getElementById('priority') as HTMLSelectElement).value,
        color: (document.getElementById('goalColor') as HTMLInputElement).value,
        notify_percentage: parseInt((document.getElementById('notifyPercentage') as HTMLInputElement).value),
        created_by: currentUser.id
      };

      try {
        if (goalId) {
          await updateGoal(goalId, goalData as any);
        } else {
          await addGoal(goalData as any);
        }
        
        closeModal();
        await loadGoals();
      } catch (error) {
        console.error('Error saving goal:', error);
        alert('Error al guardar la meta');
      }
    });

    // Edit and Delete handlers
    (window as any).editGoal = (id: string) => {
      if (!canManage) return;
      const goal = allGoals.find(g => g.id === id);
      if (!goal) return;

      document.getElementById('modalTitle')!.textContent = 'Editar Meta';
      (document.getElementById('goalId') as HTMLInputElement).value = goal.id;
      (document.getElementById('title') as HTMLInputElement).value = goal.title;
      (document.getElementById('description') as HTMLTextAreaElement).value = goal.description || '';
      (document.getElementById('goalType') as HTMLSelectElement).value = goal.type;
      (document.getElementById('unit') as HTMLSelectElement).value = goal.unit;
      (document.getElementById('targetValue') as HTMLInputElement).value = goal.target_value;
      (document.getElementById('currentValue') as HTMLInputElement).value = goal.current_value;
      (document.getElementById('startDate') as HTMLInputElement).value = goal.start_date;
      (document.getElementById('endDate') as HTMLInputElement).value = goal.end_date;
      (document.getElementById('autoCalculate') as HTMLInputElement).checked = goal.auto_calculate || false;
      (document.getElementById('priority') as HTMLSelectElement).value = goal.priority || 'medium';
      (document.getElementById('goalColor') as HTMLInputElement).value = goal.color || '#6366f1';
      (document.getElementById('goalColorText') as HTMLInputElement).value = goal.color || '#6366f1';
      (document.getElementById('notifyPercentage') as HTMLInputElement).value = goal.notify_percentage || 80;
      document.getElementById('notifyValue')!.textContent = `${goal.notify_percentage || 80}%`;

      // Update current value input state
      const currentValueInput = document.getElementById('currentValue') as HTMLInputElement;
      currentValueInput.disabled = goal.auto_calculate || false;
      currentValueInput.classList.toggle('opacity-50', goal.auto_calculate || false);

      modal.classList.remove('hidden');
      modal.classList.add('flex');
    };

    (window as any).confirmDelete = (id: string) => {
      if (!canManage) return;
      (document.getElementById('deleteGoalId') as HTMLInputElement).value = id;
      deleteModal.classList.remove('hidden');
      deleteModal.classList.add('flex');
    };

    document.getElementById('cancelDeleteBtn')?.addEventListener('click', () => {
      deleteModal.classList.add('hidden');
      deleteModal.classList.remove('flex');
    });

    document.getElementById('confirmDeleteBtn')?.addEventListener('click', async () => {
      if (!canManage) return;
      const id = (document.getElementById('deleteGoalId') as HTMLInputElement).value;
      try {
        await deleteGoal(id);
        deleteModal.classList.add('hidden');
        deleteModal.classList.remove('flex');
        await loadGoals();
      } catch (error) {
        console.error('Error deleting goal:', error);
        alert('Error al eliminar la meta');
      }
    });

    init();
  </script>
</DashboardLayout>
