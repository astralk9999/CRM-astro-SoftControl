    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
      <div class="p-6 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between sticky top-0 bg-white dark:bg-slate-800 z-10">
        <div>
          <h2 id="modalTitle" class="text-xl font-bold text-slate-900 dark:text-white">Nueva Meta</h2>
          <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Define objetivos vinculados a datos reales</p>
        </div>
        <button type="button" id="closeModalBtn" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 p-2 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>
      <form id="goalForm" class="p-6 space-y-6">
        <input type="hidden" id="goalId">
        
        <!-- T√≠tulo y descripci√≥n -->
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">T√≠tulo de la Meta *</label>
            <input type="text" id="title" class="input-field w-full" placeholder="Ej: Alcanzar ‚Ç¨10,000 en ventas mensuales" required>
          </div>
          
