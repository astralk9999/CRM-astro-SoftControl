          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-slate-600 dark:text-slate-400 mb-1.5">Tipo de Meta *</label>
              <select id="goalType" class="input-field w-full" required>
                <optgroup label="üí∞ Ventas">
                  <option value="sales_revenue">Ingresos por Ventas (‚Ç¨)</option>
                  <option value="sales_count">N√∫mero de Ventas</option>
                </optgroup>
                <optgroup label="üë• Clientes">
                  <option value="new_clients">Nuevos Clientes</option>
                </optgroup>
                <optgroup label="üîÑ Suscripciones">
                  <option value="active_subscriptions">Suscripciones Activas</option>
                  <option value="mrr">MRR (Ingresos Recurrentes)</option>
                </optgroup>
                <optgroup label="üîë Licencias">
                  <option value="active_licenses">Licencias Activas</option>
                </optgroup>
                <optgroup label="‚ö†Ô∏è Pendientes">
                  <option value="pending_payments">Cobros Pendientes (‚Ç¨)</option>
                  <option value="pending_count">Cantidad Pendientes</option>
                </optgroup>
                <optgroup label="üì¶ Productos">
                  <option value="products_sold">Productos Vendidos</option>
                </optgroup>
                <optgroup label="‚≠ê Otras">
                  <option value="custom">Meta Personalizada</option>
                </optgroup>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-slate-600 dark:text-slate-400 mb-1.5">Unidad de Medida</label>
              <select id="unit" class="input-field w-full">
                <option value="EUR">‚Ç¨ Euros</option>
                <option value="units"># Unidades</option>
                <option value="percent">% Porcentaje</option>
              </select>
            </div>
          </div>
          
          <div class="flex items-center gap-3 p-3 bg-white dark:bg-slate-800 rounded-lg border border-indigo-200 dark:border-indigo-800">
            <input type="checkbox" id="autoCalculate" class="w-5 h-5 rounded border-slate-300 text-indigo-600 focus:ring-indigo-500">
            <div>
              <label for="autoCalculate" class="text-sm font-medium text-slate-700 dark:text-slate-300 cursor-pointer">Calcular autom√°ticamente</label>
              <p class="text-xs text-slate-500 dark:text-slate-400">El valor actual se actualizar√° autom√°ticamente desde los datos reales</p>
            </div>
          </div>
        </div>

        <!-- Valores objetivo -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Valor Objetivo *</label>
            <input type="number" id="targetValue" step="0.01" min="0" class="input-field w-full text-lg font-semibold" placeholder="10000" required>
          </div>
          <div>
            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">Valor Actual</label>
            <input type="number" id="currentValue" step="0.01" min="0" value="0" class="input-field w-full text-lg" placeholder="0">
            <p class="text-xs text-slate-500 mt-1" id="autoCalcHint">Se calcular√° autom√°ticamente si est√° habilitado</p>
          </div>
        </div>
        
        <!-- Fechas -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                Fecha Inicio *
              </span>
            </label>
            <input type="date" id="startDate" class="input-field w-full" required>
          </div>
          <div>
            <label class="block text-sm font-semibold text-slate-700 dark:text-slate-300 mb-2">
