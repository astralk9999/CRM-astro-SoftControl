  </style>

  <script>
    import { getGoals, addGoal, updateGoal, deleteGoal, canManageGoals } from '../lib/supabase';
    import { checkAuth } from '../lib/auth';
    import { format, differenceInDays } from 'date-fns';
    import { es } from 'date-fns/locale';

    let currentUser: any = null;
    let allGoals: any[] = [];
    let canManage = false;

    function formatCurrency(amount: number): string {
      return new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR' }).format(amount);
    }

    function formatValue(value: number, unit: string): string {
      if (unit === 'EUR') return formatCurrency(value);
      if (unit === 'percent') return `${value}%`;
      return value.toString();
    }

    const typeLabels: Record<string, string> = {
      sales_revenue: 'Ingresos',
      sales_count: 'Ventas',
      new_clients: 'Clientes',
      active_subscriptions: 'Suscripciones',
      active_licenses: 'Licencias',
      pending_payments: 'Pendientes ‚Ç¨',
