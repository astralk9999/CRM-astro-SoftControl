---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout title="Dashboard" activeSection="dashboard">
  <div class="px-4 sm:px-6 lg:px-8 py-6">
    <!-- Header -->
    <div class="mb-6 flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 flex items-center justify-center shadow-lg shadow-indigo-500/30">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Panel de Control</h1>
          <p class="text-slate-500 dark:text-slate-400 text-sm">Resumen general de tu negocio</p>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <div id="welcomeUser" class="px-4 py-2 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 dark:from-indigo-500/20 dark:to-purple-500/20 rounded-xl border border-indigo-200/50 dark:border-indigo-500/30">
          <span class="text-sm font-semibold text-indigo-700 dark:text-indigo-300"></span>
        </div>
      </div>
    </div>

    <!-- Expired Trials Alert -->
    <div id="expiredTrialsAlert" class="mb-6 hidden">
      <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-700/50 rounded-2xl p-4">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 rounded-xl bg-amber-500/20 dark:bg-amber-500/30 flex items-center justify-center flex-shrink-0">
            <svg class="h-5 w-5 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-sm font-bold text-amber-800 dark:text-amber-300">Pruebas Gratuitas Expiradas</h3>
            <p class="text-sm text-amber-700 dark:text-amber-400 mt-1">
              Hay <span id="expiredTrialsCount" class="font-bold">0</span> usuarios cuya prueba gratuita ha caducado.
            </p>
            <div id="expiredTrialsList" class="mt-3 space-y-2"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="mb-6">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
        <a href="/customers" class="group relative overflow-hidden p-4 bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 hover:border-blue-300 dark:hover:border-blue-600 transition-all hover:shadow-lg hover:shadow-blue-500/10">
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-blue-400 to-indigo-600 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
              </svg>
            </div>
            <div>
              <span class="text-sm font-semibold text-slate-700 dark:text-white block">Nuevo Cliente</span>
              <span class="text-xs text-slate-500 dark:text-slate-400">Añadir registro</span>
            </div>
          </div>
        </a>
        <a href="/sales" class="group relative overflow-hidden p-4 bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 hover:border-emerald-300 dark:hover:border-emerald-600 transition-all hover:shadow-lg hover:shadow-emerald-500/10">
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-emerald-400 to-green-600 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <span class="text-sm font-semibold text-slate-700 dark:text-white block">Ver Ventas</span>
              <span class="text-xs text-slate-500 dark:text-slate-400">Gestionar ventas</span>
            </div>
          </div>
        </a>
        <a href="/licenses" class="group relative overflow-hidden p-4 bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 hover:border-violet-300 dark:hover:border-violet-600 transition-all hover:shadow-lg hover:shadow-violet-500/10">
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-violet-400 to-purple-600 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
              </svg>
            </div>
            <div>
              <span class="text-sm font-semibold text-slate-700 dark:text-white block">Licencias</span>
              <span class="text-xs text-slate-500 dark:text-slate-400">Ver licencias</span>
            </div>
          </div>
        </a>
        <a href="/subscriptions" class="group relative overflow-hidden p-4 bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 hover:border-orange-300 dark:hover:border-orange-600 transition-all hover:shadow-lg hover:shadow-orange-500/10">
          <div class="flex items-center gap-3">
            <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-orange-400 to-amber-600 flex items-center justify-center shadow-md group-hover:scale-110 transition-transform">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
            </div>
            <div>
              <span class="text-sm font-semibold text-slate-700 dark:text-white block">Suscripciones</span>
              <span class="text-xs text-slate-500 dark:text-slate-400">Gestionar planes</span>
            </div>
          </div>
        </a>
      </div>
    </div>

    <!-- Financial Stats -->
    <div class="mb-6">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Monthly Revenue -->
        <div class="relative overflow-hidden bg-gradient-to-br from-emerald-500 to-green-600 rounded-2xl p-5 text-white shadow-lg shadow-emerald-500/20">
          <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
              <span class="text-sm font-medium text-white/80">Ingresos del Mes</span>
            </div>
            <p id="monthlyRevenue" class="text-3xl font-bold">0,00 €</p>
          </div>
        </div>

        <!-- Pending Revenue -->
        <div class="relative overflow-hidden bg-gradient-to-br from-orange-500 to-amber-600 rounded-2xl p-5 text-white shadow-lg shadow-orange-500/20">
          <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm font-medium text-white/80">Pendiente de Cobro</span>
            </div>
            <p id="monthlyExpenses" class="text-3xl font-bold">0,00 €</p>
          </div>
        </div>

        <!-- Total Revenue -->
        <div class="relative overflow-hidden bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl p-5 text-white shadow-lg shadow-blue-500/20">
          <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm font-medium text-white/80">Ingresos Totales</span>
            </div>
            <p id="monthlyBalance" class="text-3xl font-bold">0,00 €</p>
          </div>
        </div>

        <!-- Sales This Month -->
        <div class="relative overflow-hidden bg-gradient-to-br from-violet-500 to-purple-600 rounded-2xl p-5 text-white shadow-lg shadow-violet-500/20">
          <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
          <div class="relative">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              <span class="text-sm font-medium text-white/80">Ventas del Mes</span>
            </div>
            <p id="inventoryValue" class="text-3xl font-bold">0</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Secondary Stats -->
    <div class="mb-6">
      <h2 class="text-sm font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-3">Estadísticas Generales</h2>
      <div class="grid grid-cols-3 lg:grid-cols-6 gap-3">
        <div class="bg-white dark:bg-slate-800/50 rounded-2xl p-4 border border-slate-200/80 dark:border-slate-700/50 text-center hover:border-slate-300 dark:hover:border-slate-600 transition-colors">
          <p class="text-2xl font-bold text-slate-900 dark:text-white" id="totalCustomers">0</p>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Clientes</p>
        </div>
        <div class="bg-white dark:bg-slate-800/50 rounded-2xl p-4 border border-slate-200/80 dark:border-slate-700/50 text-center hover:border-blue-300 dark:hover:border-blue-600 transition-colors">
          <p class="text-2xl font-bold text-blue-600 dark:text-blue-400" id="newCustomersMonth">0</p>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Nuevos este mes</p>
        </div>
        <div class="bg-white dark:bg-slate-800/50 rounded-2xl p-4 border border-slate-200/80 dark:border-slate-700/50 text-center hover:border-green-300 dark:hover:border-green-600 transition-colors">
          <p class="text-2xl font-bold text-emerald-600 dark:text-emerald-400" id="activeSubscriptions">0</p>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Suscripciones Activas</p>
        </div>
        <div class="bg-white dark:bg-slate-800/50 rounded-2xl p-4 border border-slate-200/80 dark:border-slate-700/50 text-center hover:border-amber-300 dark:hover:border-amber-600 transition-colors">
          <p class="text-2xl font-bold text-amber-600 dark:text-amber-400" id="pendingSubscriptions">0</p>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Pendientes de Pago</p>
        </div>
        <div class="bg-white dark:bg-slate-800/50 rounded-2xl p-4 border border-slate-200/80 dark:border-slate-700/50 text-center hover:border-purple-300 dark:hover:border-purple-600 transition-colors">
          <p class="text-2xl font-bold text-violet-600 dark:text-violet-400" id="activeLicenses">0</p>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Licencias Activas</p>
        </div>
        <div class="bg-white dark:bg-slate-800/50 rounded-2xl p-4 border border-slate-200/80 dark:border-slate-700/50 text-center hover:border-cyan-300 dark:hover:border-cyan-600 transition-colors">
          <p class="text-2xl font-bold text-cyan-600 dark:text-cyan-400" id="salesThisMonth">0</p>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">Ventas este mes</p>
        </div>
      </div>
    </div>

    <!-- Recent Sales & Recent Customers -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-6">
      <!-- Recent Sales -->
      <div class="bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-100 dark:border-slate-700/50 flex items-center justify-between">
          <h2 class="font-semibold text-slate-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Ventas Recientes
          </h2>
          <a href="/sales" class="text-xs text-indigo-600 dark:text-indigo-400 hover:underline font-medium">Ver todas</a>
        </div>
        <div class="p-4">
          <div id="recentSales" class="space-y-2">
            <p class="text-slate-500 dark:text-slate-400 text-sm py-4 text-center">Cargando ventas...</p>
          </div>
        </div>
      </div>

      <!-- Recent Customers -->
      <div class="bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 overflow-hidden">
        <div class="px-5 py-4 border-b border-slate-100 dark:border-slate-700/50 flex items-center justify-between">
          <h2 class="font-semibold text-slate-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Clientes Recientes
          </h2>
          <a href="/customers" class="text-xs text-indigo-600 dark:text-indigo-400 hover:underline font-medium">Ver todos</a>
        </div>
        <div class="p-4">
          <div id="recentCustomers" class="space-y-2">
            <p class="text-slate-500 dark:text-slate-400 text-sm py-4 text-center">Cargando clientes...</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Expiring Subscriptions -->
    <div class="bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200/80 dark:border-slate-700/50 overflow-hidden">
      <div class="px-5 py-4 border-b border-slate-100 dark:border-slate-700/50 flex items-center justify-between">
        <h2 class="font-semibold text-slate-900 dark:text-white flex items-center gap-2">
          <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Suscripciones por Vencer
          <span class="text-xs font-normal text-slate-500 dark:text-slate-400">(próximos 30 días)</span>
        </h2>
        <a href="/subscriptions" class="text-xs text-indigo-600 dark:text-indigo-400 hover:underline font-medium">Ver todas</a>
      </div>
      <div class="p-4">
        <div id="expiringSubscriptions" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
          <p class="text-slate-500 dark:text-slate-400 text-sm col-span-full text-center py-4">Cargando suscripciones...</p>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { getDashboardStats, getRecentSales, getRecentCustomers, getExpiringSubscriptions, getExpiredTrials } from '../lib/supabase';
    import { checkAuth, isStaffUser } from '../lib/auth';
    import { format } from 'date-fns';
    import { es } from 'date-fns/locale';

    function formatCurrency(amount: number): string {
      return new Intl.NumberFormat('es-ES', { style: 'currency', currency: 'EUR' }).format(amount);
    }

    async function loadDashboard() {
      const user = await checkAuth();
      
      // Verificar que es staff
      if (!isStaffUser(user)) {
        window.location.href = '/login';
        return;
      }

      const welcomeEl = document.getElementById('welcomeUser');
      if (welcomeEl && user?.profile) {
        welcomeEl.textContent = `Hola, ${user.profile.full_name}`;
      }

      try {
        const stats = await getDashboardStats();
        
        if (stats) {
          const monthlyRevenue = stats.monthly_revenue || 0;
          const pendingRevenue = stats.pending_revenue || 0;

          document.getElementById('monthlyRevenue')!.textContent = formatCurrency(monthlyRevenue);
          document.getElementById('monthlyExpenses')!.textContent = formatCurrency(pendingRevenue);
          document.getElementById('monthlyExpenses')!.previousElementSibling!.textContent = 'Pendiente de Cobro';
          
          const balanceEl = document.getElementById('monthlyBalance')!;
          balanceEl.textContent = formatCurrency(stats.total_revenue || 0);
          balanceEl.previousElementSibling!.textContent = 'Ingresos Totales';

          const invValueEl = document.getElementById('inventoryValue');
          if (invValueEl) {
            invValueEl.textContent = (stats.sales_this_month || 0).toString();
            invValueEl.previousElementSibling!.textContent = 'Ventas del Mes';
          }

          document.getElementById('totalCustomers')!.textContent = (stats.total_customers || 0).toString();
          document.getElementById('newCustomersMonth')!.textContent = (stats.new_customers_month || 0).toString();
          document.getElementById('activeSubscriptions')!.textContent = (stats.active_subscriptions || 0).toString();
          document.getElementById('pendingSubscriptions')!.textContent = (stats.pending_subscriptions || 0).toString();
          document.getElementById('activeLicenses')!.textContent = (stats.active_licenses || 0).toString();
          document.getElementById('salesThisMonth')!.textContent = (stats.sales_this_month || 0).toString();
        }
      } catch (error) {
        console.error('Error loading dashboard stats:', error);
      }
    }

    async function loadRecentSalesSection() {
      try {
        const sales = await getRecentSales(5);
        const container = document.getElementById('recentSales');
        if (!container) return;

        if (sales.length === 0) {
          container.innerHTML = '<p class="text-slate-500 text-sm">No hay ventas registradas</p>';
          return;
        }

        container.innerHTML = sales.map(sale => {
          const statusClass = sale.payment_status === 'paid' ? 'badge-success' : 
                             sale.payment_status === 'pending' ? 'badge-warning' : 'badge-danger';
          const statusText = sale.payment_status === 'paid' ? 'Pagado' : 
                            sale.payment_status === 'pending' ? 'Pendiente' : 'Fallido';
          
          return `
            <div class="flex items-center justify-between py-3 px-3 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
              <div>
                <p class="text-sm font-medium text-slate-900 dark:text-white">${sale.product_name || 'Venta'}</p>
                <p class="text-xs text-slate-500 dark:text-slate-400">${sale.customer_name || 'Cliente'} · ${format(new Date(sale.sale_date), 'dd MMM', { locale: es })}</p>
              </div>
              <div class="text-right">
                <p class="text-sm font-bold text-slate-900 dark:text-white">${formatCurrency(sale.amount)}</p>
                <span class="${statusClass} text-xs">${statusText}</span>
              </div>
            </div>
          `;
        }).join('');
      } catch (error) {
        console.error('Error loading recent sales:', error);
      }
    }

    async function loadRecentCustomersSection() {
      try {
        const customers = await getRecentCustomers(5);
        const container = document.getElementById('recentCustomers');
        if (!container) return;

        if (customers.length === 0) {
          container.innerHTML = '<p class="text-slate-500 text-sm">No hay clientes registrados</p>';
          return;
        }

        container.innerHTML = customers.map(customer => `
          <div class="flex items-center justify-between py-3 px-3 rounded-xl hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center flex-shrink-0">
                <span class="text-white text-sm font-semibold">${customer.full_name.charAt(0).toUpperCase()}</span>
              </div>
              <div>
                <p class="text-sm font-medium text-slate-900 dark:text-white">${customer.full_name}</p>
                <p class="text-xs text-slate-500 dark:text-slate-400">${customer.email}</p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-xs text-slate-400 dark:text-slate-500">${format(new Date(customer.created_at), 'dd MMM', { locale: es })}</p>
              ${customer.company_name ? `<p class="text-xs text-slate-500 dark:text-slate-400">${customer.company_name}</p>` : ''}
            </div>
          </div>
        `).join('');
      } catch (error) {
        console.error('Error loading recent customers:', error);
      }
    }

    async function loadExpiringSubscriptionsSection() {
      try {
        const subscriptions = await getExpiringSubscriptions(30);
        const container = document.getElementById('expiringSubscriptions');
        if (!container) return;

        if (subscriptions.length === 0) {
          container.innerHTML = '<p class="text-green-600 text-sm col-span-full font-medium">✓ No hay suscripciones por vencer próximamente</p>';
          return;
        }

        container.innerHTML = subscriptions.map(sub => {
          const daysLeft = Math.ceil((new Date(sub.end_date!).getTime() - Date.now()) / (1000 * 60 * 60 * 24));
          const urgencyClass = daysLeft <= 7 
            ? 'border-red-200 dark:border-red-800/50 bg-red-50 dark:bg-red-900/20' 
            : daysLeft <= 14 
              ? 'border-amber-200 dark:border-amber-800/50 bg-amber-50 dark:bg-amber-900/20' 
              : 'border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800/50';
          
          return `
            <div class="rounded-xl p-4 border ${urgencyClass}">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-sm font-semibold text-slate-900 dark:text-white">${sub.customer_name}</h3>
                <span class="text-xs font-bold px-2 py-0.5 rounded-full ${daysLeft <= 7 ? 'text-red-600 dark:text-red-400 bg-red-100 dark:bg-red-900/50' : 'text-amber-600 dark:text-amber-400 bg-amber-100 dark:bg-amber-900/50'}">${daysLeft} días</span>
              </div>
              <p class="text-xs font-medium text-slate-700 dark:text-slate-300">${sub.product_name}</p>
              <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">${sub.customer_email}</p>
              <p class="text-xs text-slate-400 dark:text-slate-500 mt-2">
                Vence: ${format(new Date(sub.end_date!), 'dd MMM yyyy', { locale: es })}
              </p>
            </div>
          `;
        }).join('');
      } catch (error) {
        console.error('Error loading expiring subscriptions:', error);
      }
    }

    async function loadExpiredTrialsAlert() {
      try {
        const expiredTrials = await getExpiredTrials();
        const alertEl = document.getElementById('expiredTrialsAlert');
        const countEl = document.getElementById('expiredTrialsCount');
        const listEl = document.getElementById('expiredTrialsList');
        
        if (!alertEl || !countEl || !listEl) return;
        
        if (expiredTrials.length === 0) {
          alertEl.classList.add('hidden');
          return;
        }
        
        alertEl.classList.remove('hidden');
        countEl.textContent = expiredTrials.length.toString();
        
        listEl.innerHTML = expiredTrials.slice(0, 5).map(trial => `
          <div class="flex items-center justify-between bg-white rounded-lg px-3 py-2 border border-amber-100">
            <div>
              <p class="text-sm font-medium text-slate-900">${trial.customer_name}</p>
              <p class="text-xs text-slate-500">${trial.customer_email}</p>
            </div>
            <div class="text-right">
              <p class="text-xs text-amber-600">Expiró: ${format(new Date(trial.trial_ends_at!), 'dd MMM', { locale: es })}</p>
              <a href="/customers" class="text-xs text-indigo-600 hover:underline">Contactar</a>
            </div>
          </div>
        `).join('') + (expiredTrials.length > 5 ? `<p class="text-xs text-amber-700 mt-2">y ${expiredTrials.length - 5} más...</p>` : '');
      } catch (error) {
        console.error('Error loading expired trials:', error);
      }
    }

    // Load all data
    loadDashboard();
    loadRecentSalesSection();
    loadRecentCustomersSection();
    loadExpiringSubscriptionsSection();
    loadExpiredTrialsAlert();
  </script>
</DashboardLayout>
