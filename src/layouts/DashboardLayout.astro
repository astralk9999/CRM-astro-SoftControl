---
import Layout from './Layout.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  activeSection?: 'dashboard' | 'customers' | 'sales' | 'subscriptions' | 'licenses' | 'products' | 'staff' | 'usuarios' | 'goals';
}

const { title, activeSection = 'dashboard' } = Astro.props;
---

<Layout title={title}>
  <!-- Loading screen while checking auth -->
  <div id="authLoading" class="fixed inset-0 bg-gradient-to-br from-slate-50 to-indigo-50 dark:from-slate-900 dark:to-indigo-950 z-50 flex items-center justify-center">
    <div class="text-center">
      <div class="relative">
        <div class="w-16 h-16 border-4 border-indigo-200 dark:border-indigo-800 rounded-full"></div>
        <div class="w-16 h-16 border-4 border-transparent border-t-indigo-600 rounded-full animate-spin absolute top-0 left-0"></div>
      </div>
      <p class="text-slate-600 dark:text-slate-400 mt-4 font-medium">Verificando acceso...</p>
    </div>
  </div>

  <div id="dashboardContent" class="min-h-screen hidden">
    <!-- Navigation -->
    <nav class="bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl sticky top-0 z-40 border-b border-slate-200/80 dark:border-slate-700/80 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <!-- Logo -->
            <a href="/dashboard" class="flex items-center group">
              <img src="/images/logo-icon.png" alt="SoftControl" class="w-10 h-10 rounded-xl shadow-md group-hover:shadow-lg transition-all group-hover:scale-105" />
            </a>
            
            <!-- Desktop Navigation -->
            <div class="hidden lg:flex lg:items-center lg:ml-8 lg:gap-1">
              <a href="/dashboard" class={`nav-link ${activeSection === 'dashboard' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span>Dashboard</span>
              </a>
              <a href="/customers" class={`nav-link ${activeSection === 'customers' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>Clientes</span>
              </a>
              <a href="/sales" class={`nav-link ${activeSection === 'sales' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Ventas</span>
              </a>
              <a href="/subscriptions" class={`nav-link ${activeSection === 'subscriptions' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                <span>Suscripciones</span>
              </a>
              <a href="/licenses" class={`nav-link ${activeSection === 'licenses' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
                <span>Licencias</span>
              </a>
              <a href="/products" class={`nav-link ${activeSection === 'products' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                <span>Productos</span>
              </a>
              <a href="/goals" class={`nav-link ${activeSection === 'goals' ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                <span>Metas</span>
              </a>
              <a href="/usuarios" id="usuariosLink" class={`nav-link ${(activeSection === 'usuarios' || activeSection === 'staff') ? 'nav-link-active' : ''}`}>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                </svg>
                <span>Equipo</span>
              </a>
            </div>
          </div>
          
          <!-- Right side: User info & actions -->
          <div class="hidden sm:flex sm:items-center sm:gap-4">
            <!-- Theme toggle placeholder -->
            <button id="themeToggle" class="p-2 rounded-lg text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
              <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
              </svg>
            </button>
            
            <!-- User dropdown -->
            <div class="flex items-center gap-3 pl-3 border-l border-slate-200 dark:border-slate-700">
              <div class="text-right">
                <span id="userEmail" class="block text-sm font-medium text-slate-700 dark:text-slate-200 max-w-[150px] truncate"></span>
                <span id="userRole" class="text-xs px-2 py-0.5 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 text-white font-medium"></span>
              </div>
              <button id="logoutBtn" class="p-2 rounded-lg text-slate-500 hover:text-red-600 dark:text-slate-400 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors" title="Cerrar sesión">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
              </button>
            </div>
          </div>
          
          <!-- Mobile menu button -->
          <div class="flex items-center lg:hidden">
            <button id="mobileMenuBtn" type="button" class="p-2 rounded-lg text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Mobile menu -->
    <div id="mobileMenu" class="hidden lg:hidden bg-white/95 dark:bg-slate-900/95 backdrop-blur-xl border-b border-slate-200 dark:border-slate-700 shadow-xl">
      <div class="p-4 border-b border-slate-200 dark:border-slate-700">
        <a href="/dashboard" class="flex items-center">
          <img src="/images/logo-icon.png" alt="SoftControl" class="w-9 h-9 rounded-xl shadow-md" />
        </a>
      </div>
      <div class="p-4 space-y-1">
        <a href="/dashboard" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
          Dashboard
        </a>
        <a href="/customers" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
          Clientes
        </a>
        <a href="/sales" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          Ventas
        </a>
        <a href="/subscriptions" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>
          Suscripciones
        </a>
        <a href="/licenses" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path></svg>
          Licencias
        </a>
        <a href="/products" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path></svg>
          Productos
        </a>
        <a href="/goals" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>
          Metas
        </a>
        <a href="/usuarios" id="mobileUsuariosLink" class="mobile-nav-link">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
          Equipo
        </a>
      </div>
      <div class="p-4 border-t border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800/50">
        <div class="flex items-center justify-between">
          <div>
            <span id="mobileUserEmail" class="block text-sm font-medium text-slate-700 dark:text-slate-200"></span>
            <span id="mobileUserRole" class="inline-block text-xs px-2 py-0.5 rounded-full bg-gradient-to-r from-indigo-500 to-purple-500 text-white font-medium mt-1"></span>
          </div>
          <button id="mobileLogoutBtn" class="p-2 rounded-lg text-slate-500 hover:text-red-600 dark:text-slate-400 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <main class="py-10">
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <slot />
      </div>
    </main>
  </div>

  <script>
    import { signOut, getRoleLabel } from '../lib/supabase';
    import { checkAuth, isStaffUser, isAdmin, isSuperAdmin } from '../lib/auth';

    const roleLabels: Record<string, string> = {
      admin: 'Administrador',
      staff: 'Personal'
    };

    // Check authentication - only staff can access dashboard
    async function initAuth() {
      const authLoading = document.getElementById('authLoading');
      const dashboardContent = document.getElementById('dashboardContent');
      
      const user = await checkAuth();
      
      if (!user || !isStaffUser(user)) {
        window.location.href = '/login';
        return;
      }

      // Auth verified - show content, hide loading
      if (authLoading) authLoading.classList.add('hidden');
      if (dashboardContent) dashboardContent.classList.remove('hidden');

      // Display user info
      const userEmail = document.getElementById('userEmail');
      const userRole = document.getElementById('userRole');
      const mobileUserEmail = document.getElementById('mobileUserEmail');
      const mobileUserRole = document.getElementById('mobileUserRole');

      const role = user.profile?.role || 'staff';
      const roleLabel = roleLabels[role] || role;

      if (userEmail) userEmail.textContent = user.profile?.full_name || user.email;
      if (userRole) userRole.textContent = roleLabel;
      if (mobileUserEmail) mobileUserEmail.textContent = user.email;
      if (mobileUserRole) mobileUserRole.textContent = roleLabel;

      // Hide sección Equipo para usuarios staff (solo lectura)
      const usuariosLink = document.getElementById('usuariosLink');
      const mobileUsuariosLink = document.getElementById('mobileUsuariosLink');
      
      // Staff users cannot see the Equipo section - only admins and super_admins can
      if (role === 'staff') {
        if (usuariosLink) usuariosLink.style.display = 'none';
        if (mobileUsuariosLink) mobileUsuariosLink.style.display = 'none';
      }
    }

    // Logout functionality
    const logoutBtn = document.getElementById('logoutBtn');
    const mobileLogoutBtn = document.getElementById('mobileLogoutBtn');

    async function handleLogout() {
      await signOut();
      window.location.href = '/login';
    }

    if (logoutBtn) {
      logoutBtn.addEventListener('click', handleLogout);
    }

    if (mobileLogoutBtn) {
      mobileLogoutBtn.addEventListener('click', handleLogout);
    }

    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const mobileMenu = document.getElementById('mobileMenu');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }

    // Initialize on page load
    initAuth();
  </script>
</Layout>
